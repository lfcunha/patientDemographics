<div id="container" style="margin-top:200px">
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="text-align:center">
        <div class="modal-body">

            <form class="form-signin" name="register" role="form" action="/demographicsDB/register" method="post" _lpchecked="1">
                <h2 class="form-signin-heading"></h2>
                <fieldset>
                    <legend>Register:</legend>


                        <input name="user" type="text" class="form-control"  value="username" style="color:#ccc;" onfocus="this.value = this.value=='username' ? '' : this.value; this.style.color='#000';" onfocusout="this.value = this.value == '' ? this.value = 'username' : this.value; this.value=='username' ? this.style.color='#ccc' : this.style.color='#000'"/>
                        <input name="name" type="text" class="form-control"  value="name" style="color:#ccc;" onfocus="this.value = this.value=='name' ? '' : this.value; this.style.color='#000';" onfocusout="this.value = this.value == '' ? this.value = 'name' : this.value; this.value=='name' ? this.style.color='#ccc' : this.style.color='#000'"/>

                        <input name="email" type="email" class="form-control" style="color:#ccc;" value="email" onfocus="this.value = this.value=='email' ? '' : this.value; this.style.color='#000';" onfocusout="this.value = this.value == '' ? this.value = 'email' : this.value; this.value=='email' ? this.style.color='#ccc' : this.style.color='#000'"/>



                        <input name="pass" type="password" class="form-control" style="color:#ccc;" value="password" onfocus="this.value = this.value=='password' ? '' : this.value; this.style.color='#000';" onfocusout="this.value = this.value == '' ? this.value = 'password' : this.value; this.value=='password' ? this.style.color='#ccc' : this.style.color='#000'"/>
                        <input name="pass2" type="password" class="form-control" style="color:#ccc;" value="password" onfocus="this.value = this.value=='password' ? '' : this.value; this.style.color='#000';" onfocusout="this.value = this.value == '' ? this.value = 'password' : this.value; this.value=='password' ? this.style.color='#ccc' : this.style.color='#000'"/>


                        <button class="btn btn-lg btn-primary btn-block" id="submit" name="submit" type="submit">Register</button>


                </fieldset>



            </form>

        </div>

    </div>
    <div class="col-md-4"></div>
</div>
