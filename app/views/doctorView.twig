{% extends "basehtml.twig" %}

{% block head %}
    {{ parent() }}


    <script id="individualsTable-template" type="text/x-handlebars-template">
        {% verbatim %}
        <td id={{id}}                   name="id" >{{id}}</td>
        <td id={{id}} class="crosshair" name="firstName" >{{firstName}}</td>
        <td id={{id}} class="crosshair" name="lastName" >{{lastName}}</td>
        <td id={{id}} class="crosshair" name="office">{{office}}</td>
        <td id={{id}} class="crosshair" name="institution">{{institution}}</td>
        <td id={{id}} class="crosshair" name="city" >{{city}}</td>
        <td id={{id}} class="crosshair" name="country">{{country}}</td>
        <td id={{id}}                   name="created" >{{created}}</td>
        <td id={{id}}                   name="modified">{{modified}}</td>


        {% endverbatim %}
    </script>


{% endblock %}



{% block table %}

                            <form action='doctor' method='post'>
                            <table id="doctorsTable" class="table table-hover dataTable table-bordered tablesorter" cellspacing="0"  style="margin-top:5px;width:100%">
                                <thead>
                                <tr>
                                    <th class="sorting" name="id" >id</th>
                                    <th class="sorting" name="firstName" >First Name</th>
                                    <th class="sorting" name="lastName" >Last Name</th>
                                    <th class="sorting" name="office">Office</th>
                                    <th class="sorting" name="institution">Institution</th>
                                    <th class="sorting" name="city" >City</th>
                                    <th class="sorting" name="country">Country</th>
                                    <!--<th class="sorting" name="created" >Created</th>
                                    <th class="sorting" name="modified">Modified</th>-->

                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    <th class="sorting" name="id" >id</th>
                                    <th class="sorting" name="firstName" >First Name</th>
                                    <th class="sorting" name="lastName" >Last Name</th>
                                    <th class="sorting" name="office">Office</th>
                                    <th class="sorting" name="institution">Institution</th>
                                    <th class="sorting" name="city" >City</th>
                                    <th class="sorting" name="country">Country</th>
                                    <!--<th class="sorting" name="created" >Created</th>
                                    <th class="sorting" name="modified">Modified</th>-->
                                </tr>
                                </tfoot>
                                <tbody>

                                {% for item in data['data'] %}
                                    <tr>
                                        {% for value in item | slice(0, (item|length)-2) %}
                                             <td> {{ value }} </td>
                                        {% endfor %}
                                    </tr>
                                {% endfor %}

                                </tbody>
                            </table>
                            </form>
{% endblock %}

{% block customButtons %}
<ul class="export" style="margin:0px; float:left; margin-top: 7px; padding-left: 15px;">
    <span><button style="color:#428bca;  margin-top:-1px" id = "addDoctor" name="addDoctor" class="btn btn-sm btn-default" onclick="addDoctorRow()" />Add doctor</span>
    <span><button type="submit" style=" display:none; color:#428bca;  margin-top:-1px" id ="submitDoctor" name="submitDoctor" class="btn btn-sm btn-default" onclick = "submitForm()" />Submit</span>

</ul>
{%  endblock %}






{% block scripts %}
    {{ parent() }}
    <script src="public/assets/js/doctor.js"></script>
{% endblock %}